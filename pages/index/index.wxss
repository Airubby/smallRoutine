/**index.wxss**/
.index_top {
    width: 100%;
    height: 45px;
    padding: 10px 0;
    background: #11A9EC;
}
.index_logo{
  float: left;
  margin-left: 10px;
}
.index_logo image{
  width: 100px;
  height: 45px;
}
.index_phone{
  float: right;
  height: 45px;
  font-size: 12px;
  margin-right: 10px;
  color: #fff;
  line-height: 70px;
}
.slide-image{
  width: 100%;
  height: 200px;
}
.form_group{
  width: 100%;
  padding: 10px 0;
  overflow: hidden;
}
.form_input {
    display: block;
    width: calc(100% - 94px);
    height: 30px;
    line-height: 30px;
    padding: 0 10px;
    font-size: 14px;
    color: #555;
    background-color: #fff;
    background-image: none;
    border: 1px solid #ccc;
    border-radius: 4px;
    float: left;
}
.form_btn{
  width: 70px;
  height: 30px;
  line-height: 30px;
  border: 1px solid #ccc;
  font-size: 14px;
  float: left;
  padding-left: 0;
  padding-right:0;
}




.rowbox{
    width: 100%;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
}
.nav-entry .rowbox{
    margin-bottom: 4px;
    height: 80px;
}
.subNav-entry .rowbox{
  height: 40px;
  margin-bottom: 1px;
}
.nav-entry .col:nth-child(1) {
    border-left: none;
}
.nav-entry .col {
    border-left: 1px solid #fff;
    height: 100%;
    position: relative;
     -webkit-box-flex: 1;
    -ms-flex: 1;
    flex: 1;
    display: block;
}
.col-33, .col-34 {
    -webkit-box-flex: 0;
    -ms-flex: 0 0 33.3333%;
    flex: 0 0 33.3333%;
    max-width: 33.3333%;
}
.nav-entry .col>.a {
    display: block;
    font-size: 14px;
    color: #fff;
    text-shadow: 0 2px 1px rgba(0,0,0,.2);
    line-height: 40px;
    height: 40px;
    text-align: center;
}
.nav-entry .col>.a.line{
    border-bottom: 1px solid #fff;
}
.nav-entry .col>.a .em {
    font-style: normal;
    display: block;
    position: absolute;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%,-50%);
    transform: translate(-50%,-50%);
    white-space: nowrap;
    width: 100%;
    height: 40px;
    -webkit-transition: all 1s;
    transition: all 1s;
}
.nav-entry .col:first-of-type .a {
    border-top-left-radius: 5px;
    border-bottom-left-radius: 5px;
}
.nav-entry .rowbox:nth-child(1) {
    background-color: #ff697a;
}
.nav-entry .rowbox:nth-child(2) {
    background-color: #3d98ff;
}
.nav-entry .rowbox:nth-child(3) {
    background-color: #44c522;
}
.nav-entry .rowbox:nth-child(4) {
    background-color: #fc9720;
}
.nav-entry .rowbox:nth-child(1) .col:first-of-type .a, 
.nav-entry .rowbox:nth-child(2) .col:first-of-type .a, 
.nav-entry .rowbox:nth-child(3) .col:first-of-type .a {
    height: 100%;
}
.nav-entry .col:last-of-type .a:nth-child(1) {
    border-top-right-radius: 5px;
}
.nav-entry .col:last-of-type .a:nth-child(2) {
    border-bottom-right-radius: 5px;
}
.nav-entry .rowbox .col .a:only-of-type .em {
    top: 50%;
    left: 50%;
    line-height: 50px;
    -webkit-transform: inherit;
    transform: inherit;
    -webkit-transition: none;
    transition: none;
    border: 1px solid #fff;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    text-align: center;
    margin-left: -25px;
    margin-top: -25px;
}

.subNav-entry {
    font-size: 14px;
    margin: 8px 0;
}
.col-25 {
    -webkit-box-flex: 0;
    -ms-flex: 0 0 25%;
    flex: 0 0 25%;
    max-width: 25%;
}
.subNav-entry .col {
    height: 40px;
}
.subNav-entry .col .a {
    position: relative;
    display: block;
    height: 40px;
    line-height: 40px;
    margin-right: 1px;
    background: #fff;
    text-align: center;
    font-size: .85em;
    color: #000;
}
.subNav-entry .rowbox:first-of-type .col:first-of-type .a {
    border-top-left-radius: 5px;
}
.subNav-entry .rowbox .a>.i{
    position: absolute;
    top: 11px;
    left: 50%;
    display: inline-block;
    width: 20px;
    height: 20px;
    -webkit-transform: translateX(-50%);
    transform: translateX(-50%);
}



.index_listbox{
    padding: 10px 15px;
    background: #fff;
    margin-bottom: 10px;
}
.index_title {
    position: relative;
    margin: 10px 0;
}
.index_title .h2 {
    position: relative;
    z-index: 2;
    display: inline-block;
    margin-bottom: 0;
    padding-right: 10px;
    border-right: 1px solid #0181CC;
    background: #fff;
    font-weight: normal;
    color: #0181CC;
    font-size: 16px;
    margin: 0;
}
.index_list .li{
	width: 100%;
	height: 80px;
	padding: 10px 0;
	border-bottom: 1px solid #E7E7E7;
	position: relative;
}
.index_list .li .img ,.index_list .li .img image{
	width: 100px;
	height: 80px;
}

.index_list .li .text{
	position: absolute;
    top: 10px;
    width: 100%;
    padding-left: 110px;
    box-sizing:border-box;
}
.index_list .li .text .h2{
	font-size: 14px;
	color: #ff684d;
	font-weight: normal;
	margin: 0;
	height: 32px;
	line-height: 16px;
	overflow: hidden;
	width: 100%;
	margin-bottom: 8px;
}
.index_list .li .text .p{
	margin: 0;
	height: 20px;
	line-height: 20px;
	overflow: hidden;
  display:block;
 font-size:14px;

}
.index_list .li .text .span{
	color: #f00;
	font-size: 14px;
	position: absolute;
	right: 0;
	bottom: 0;
	background: #fff;
}
.index_list .li .text .span .em{
	color: #666;
	font-size: 12px;
}


.sales-box .h2 {
    padding: 0 8px;
    background: #fff;
    height: 44px;
    line-height: 44px;
